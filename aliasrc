# SYSTEM
alias cpu='top -o cpu'
alias mem='top -o vsize'
alias ..="cd .."
alias ...="cd ../.."
alias reload="source ~/bin/dotfiles/bashrc"
alias dotfiles="mate ~/bin/dotfiles/"
alias code="cd ~/code"
alias cl="clear"

alias hg="history | grep "
alias npmr="npm run build"

alias weather="curl wttr.in/98122"

# RUBY
alias be="bundle exec"
alias bet="be rake test TEST="
alias s="bundle exec rspec"
alias sr="bundle exec spec"
alias r="rails"
alias c='cucumber -f pretty'

# GIT
alias g='git status'
alias gs='git show --stat'
alias gl='git log -n 14'
alias gb='git checkout -b'
alias gca='git commit --amend'
alias gitme='git log --author=Len'
alias glo='git log --graph --pretty=format:"%Cred%h%Creset - %s %Cgreen(%cr)%Creset" --abbrev-commit --date=relative'
alias co='git checkout'
alias gpom="git push origin master"
alias gap="git add -p"
alias wat="git for-each-ref --count=30 --sort=-committerdate refs/heads/ --format='%(refname:short)' | pick | xargs git checkout"
alias que="cat package.json | jq .scripts"
alias qdev="cat package.json | jq .devDependencies"
alias qdep="cat package.json | jq .dependencies"
alias qd="qdev && qdep"
alias pa="ps aux | grep "

alias tmux="TERM=xterm-256color tmux"
alias vim="nvim"
alias vi="nvim"

alias emul="/Users/ignu/Library/Android/sdk/tools/emulator -netdelay none -netspeed full -avd Nexus_One_API_23"

alias editalias="vim ~/bin/dotfiles2.0/aliasrc"
alias editvim="vim ~/bin/dotfiles2.0/vimrc"
alias editzsh="vim ~/bin/dotfiles2.0/zshrc"
alias godot="cd ~/bin/dotfiles2.0 && git add -p"

